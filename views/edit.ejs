<%- include('partials/header') %>

<h2>Edit Player</h2>
<form action="/edit/<%= player.id %>" method="POST">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= player.name %>">
    </div>
    <div>
        <label for="age">Age:</label>
        <input type="number" id="age" name="age" value="<%= player.age %>">
    </div>
    <div>
        <label for="position">Position:</label>
        <input type="text" id="position" name="position" value="<%= player.position %>">
    </div>
    <div>
        <label for="nationality">Nationality:</label>
        <input type="text" id="nationality" name="nationality" value="<%= player.nationality %>">
    </div>
    <div>
        <label for="overallRating">Overall Rating:</label>
        <input type="number" id="overallRating" name="overallRating" value="<%= player.overallRating %>">
    </div>
    <div>
        <label for="isActive">Active:</label>
        <input type="checkbox" id="isActive" name="isActive" <%= player.isActive ? 'checked' : '' %>>
    </div>
    <div>
        <label for="birthDate">Birth Date:</label>
        <input type="date" id="birthDate" name="birthDate" value="<%= player.birthDate %>">
    </div>
    <div>
        <label for="clubName">Club Name:</label>
        <input type="text" id="clubName" name="clubName" value="<%= player.club.name %>">
    </div>
    <div>
        <label for="clubLeague">Club League:</label>
        <input type="text" id="clubLeague" name="clubLeague" value="<%= player.club.league %>">
    </div>
    <button type="submit">Save Changes</button>
</form>

<%- include('partials/footer') %>
